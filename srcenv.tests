    printf "@echo off\n\n$json_path_output_cmd\n" | sed -e s/\"/\"\"/g | sed -e s/\\\\/\\\\\\\\\\\\\\\\/g | sed -e s/\'/\"/g > test.cmd; cmd '/c test.cmd' > test.cmd.json.path.output; rm -f test.cmd
fi

run "$cmd" "$(printf 'cat test.cmd.output\nrm -f test.cmd.output test.cmd.json.path.output')" \
           "$json_output${LF}$json_output${LF}$(when "$cmd" cat test.cmd.json.path.output)${LF}$cmd_macro${LF}{}${LF}{}${LF}{}"

