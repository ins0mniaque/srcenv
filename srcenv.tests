# shellcheck disable=SC2059
if [ "$cmd" = 1 ]; then
    printf "$cmd_script"         'cmd test.env'            "$SRCENV_JQ_OPTS" > test.cmd; cmd '/c test.cmd' >  test.cmd.output; rm -f test.cmd
    printf "$cmd_script"         'cmd test.env.sh'         "$SRCENV_JQ_OPTS" > test.cmd; cmd '/c test.cmd' >> test.cmd.output; rm -f test.cmd
